<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.himedia.groupware.dao.ApprovalDao">
    <select id="getAllCountForApp" resultType="_int">
        select count(*) from approval where title like concat('%',#{key},'%')
    </select>

    <select id="selectApp" parameterType="com.himedia.groupware.dto.Paging" resultType="com.himedia.groupware.dto.ApprovalDto">
        select * from approval where title like concat ('%',#{key},'%') order by id desc limit #{paging.displayRow} offset #{paging.startNum}
    </select>

    <select id="getApp" resultType="com.himedia.groupware.dto.ApprovalDto">
        select * from approval where id=#{id}
    </select>

    <select id="getAppList" resultType="com.himedia.groupware.dto.ApprovalDto">
        select * from approval
    </select>


</mapper>