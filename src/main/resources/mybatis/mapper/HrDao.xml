<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.himedia.groupware.dao.HrDao">

    <select id="selectAttendanceByUserId" parameterType="int" resultType="com.himedia.groupware.dto.AttendanceDto">
        SELECT * FROM attendance WHERE id = #{id}
    </select>
    
    <select id="getAllCountForPay" resultType="_int">
        select count(*) from pay where title like concat('%', #{key} , '%' )
    </select>
    
    <select id="selectPay" resultType="com.himedia.groupware.dto.PayDto">
        select * from pay where title like concat('%', #{key} , '%' )    order by pseq desc  limit  #{paging.displayRow}  offset  #{paging.startNum}
    </select>

    <select id="getPay" resultType="com.himedia.groupware.dto.PayDto">
        select * from pay where pseq=#{pseq}
    </select>

    <select id="getAllCountForVacation" resultType="_int">
        select count(*) from vacation where title like concat('%', #{key} , '%' )
    </select>

    <select id="selectVacation" resultType="com.himedia.groupware.dto.VacationDto">
        select * from vacation where title like concat('%', #{key} , '%' )  order by pseq desc  limit  #{paging.displayRow}  offset  #{paging.startNum}
    </select>

    <select id="getVacation" resultType="com.himedia.groupware.dto.VacationDto">
        select * from vacation where pseq=#{pseq}
    </select>

    <delete id="deleteVacation">
        delete from vacation where pseq=#{pseq}
    </delete>


    
</mapper>